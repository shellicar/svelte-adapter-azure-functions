{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "daemon": false,
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["tsconfig.json", "**/*.ts"],
      "outputs": ["dist"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "inputs": ["tsconfig.check.json"],
      "outputs": ["**/node_modules/.cache/tsbuildinfo.json"]
    }
  }
}
